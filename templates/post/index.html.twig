{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    {% if latestPost %}

        <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary"
             style="
                position: relative;
                background-image: linear-gradient(to bottom, rgb(35 40 45 / 84%), rgba(0, 0, 0, 0.5)),
                     url({{ latestPost.imgUrl }});
                background-size: cover;
                background-position: center;">

            <div class="col-lg-6 px-0">
                <h1 class="display-4 fst-italic">{{ latestPost.title }}</h1>
                <p class="lead my-3">{{ latestPost.content|slice(0, 100) }}...</p>
                <p class="lead mb-0"><a href="{{ path('post_show', {id: latestPost.id}) }}" target="_blank" class="text-body-emphasis fw-bold">Continue reading...</a></p>
            </div>
        </div>
    {% endif %}

    <div class="row mb-2" style="align-items: stretch;">
        {% for post in posts %}
        <div class="col-md-6">
            <div style="height: 90%;" class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <div style="gap: 20px; display: flex ;flex-wrap: wrap;">
                    {% for category in post.categories %}
                        <span class="d-inline-block mb-2 text-primary-emphasis">{{ category.title }}</span>
                    {% endfor %}
                    </div>

                    <h3 class="mb-0">{{ post.title }}</h3>
                    <div class="mb-1 text-body-secondary">{{ post.createdAt|date('F j, Y') }} by {{ post.user.fullname }}</div>
                    <p class="card-text mb-auto">{{ post.content|slice(0, 150) }}...</p>
                    <a href="{{ path('post_show', { id: post.id }) }}" target="_blank" class="icon-link gap-1 icon-link-hover stretched-link">
                        Continue reading
                        <svg class="bi"><use xlink:href="#chevron-right"></use></svg>
                    </a>
                </div>
                <div class="col-auto d-none d-lg-block">
                    <img class="bd-placeholder-img" width="200" height="250" style="object-fit: cover; height: 100%;" src="{{ post.imgUrl }}" alt="Post thumbnail">
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}
